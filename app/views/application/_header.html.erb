<header>
  <h1>Hacker News</h1>
  <p>
    <%= link_to "Home", root_path %>
    <% if current_user %>
      <%= link_to "All Posts", posts_path %>
      <%= link_to "Sign Out", logout_path, method: "delete" %>
    <% else %>
      <%= link_to "Sign In", login_path %>
      <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </p>
</header>
